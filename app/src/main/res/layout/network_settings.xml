<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/network_settings"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:baselineAligned="false">

	<LinearLayout
		android:id="@+id/device_address"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:orientation="vertical"
		android:layout_weight="0.5">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_ip_address_head" />

		<TextView
			android:id="@+id/device_ip_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:textSize="18sp" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/device_port" />

		<EditText
			android:id="@+id/device_port_field"
			style="@style/EditTextPadding"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:digits="0123456789"
			android:inputType="number"
			android:nextFocusDown="@+id/root_cmd_name_field"
			android:hint="@string/receive_port"
			android:autofillHints="12345" />


		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/root_command_name_head" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:baselineAligned="false"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="25dp"
				android:layout_weight="0.05"
				android:textAlignment="center"
				android:text="@string/slash"
				android:gravity="center_horizontal" />

			<EditText
				android:id="@+id/root_cmd_name_field"
				style="@style/EditTextPadding"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.45"
				android:digits="0123456789_abcdefghijklmnopqrstuvwxyz"
				android:inputType="text" />

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="25dp"
				android:layout_weight="0.5"
				android:text="@string/sub_cmd_name" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/remote_address"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:baselineAligned="false"
		android:layout_weight="0.5">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/remote_ip_addresses" />

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<EditText
				android:id="@+id/add_remote_ip"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.55"
				android:autofillHints="IP address"
				android:hint="@string/add_ip_address"
				android:digits="0123456789."
				android:inputType="text"
				android:nextFocusDown="@+id/add_remote_port"/>

			<EditText
				android:id="@+id/add_remote_port"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.25"
				android:autofillHints="port"
				android:hint="@string/add_port"
				android:inputType="number"
				android:maxLength="5" />

			<Button
				android:id="@+id/set_protocol"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="UDP"
				android:layout_weight="0.2"/>

		</LinearLayout>

		<Button
			android:id="@+id/add_address_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_marginBottom="15dp"
			android:text="@string/add_address"/>

		<ListView
			android:id="@+id/addresses_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

	</LinearLayout>

</LinearLayout>
