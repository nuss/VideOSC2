<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/device_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_ip_address_head" />

        <TextView
            android:id="@+id/device_ip_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_port" />

        <EditText
            android:id="@+id/device_port_field"
            style="@style/EditTextPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="12345"
            android:digits="0123456789"
            android:hint="@string/receive_port"
            android:inputType="number"
            android:nextFocusDown="@+id/root_cmd_name_field" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/root_command_name_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="0.05"
                android:gravity="center_horizontal"
                android:text="@string/slash"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/root_cmd_name_field"
                style="@style/EditTextPadding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:digits="0123456789_abcdefghijklmnopqrstuvwxyz"
                android:inputType="text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="0.5"
                android:text="@string/sub_cmd_name" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remote_address"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remote_ip_addresses" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_remote_ip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:autofillHints="IP address"
                android:digits="0123456789."
                android:hint="@string/add_ip_address"
                android:inputType="text"
                android:nextFocusDown="@+id/add_remote_port" />

            <EditText
                android:id="@+id/add_remote_port"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:autofillHints="port"
                android:hint="@string/add_port"
                android:inputType="number"
                android:maxLength="5" />

            <Button
                android:id="@+id/set_protocol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="UDP" />

        </LinearLayout>

        <Button
            android:id="@+id/add_address_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/add_address" />

        <ListView
            android:id="@+id/addresses_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </LinearLayout>

</LinearLayout>
