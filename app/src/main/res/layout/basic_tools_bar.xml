<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/snapshots_bar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:layout_marginEnd="50dp"
              android:layout_marginRight="50dp"
              android:layout_marginTop="0dp"
              android:orientation="horizontal">

	<ImageButton
		android:id="@+id/osc_feedback_button"
		android:layout_height="45dp"
		android:layout_width="45dp"
		android:layout_margin="4dp"
		android:src="@drawable/osc_feedback_button"
		android:background="@drawable/osc_feedback_button_shape"
		android:contentDescription="@string/activate_or_deactivate_osc_feedback"/>

	<RelativeLayout
		android:id="@+id/saved_snapshots_wrapper"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageButton
			android:id="@+id/saved_snapshots_button"
			android:layout_width="60dp"
			android:layout_height="50dp"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="3dp"
			android:background="@drawable/saved_snapshots_button"
			android:clickable="true"
			android:contentDescription="@string/load_a_saved_snapshot"
			android:focusable="true"
			android:src="@drawable/saved_snapshots"/>

		<TextView
			android:id="@+id/num_snapshots"
			android:layout_height="24dp"
			android:layout_width="24dp"
			android:layout_alignEnd="@+id/saved_snapshots_button"
			android:layout_alignRight="@+id/saved_snapshots_button"
			android:layout_marginEnd="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="0dp"
			android:gravity="center"
			android:textSize="14sp"
			android:textColor="#00ffffff"
			android:background="@drawable/num_snapshots_shape_selector"
			android:text="0"/>

	</RelativeLayout>

	<ImageButton
		android:id="@+id/save_snapshot"
		android:layout_width="60dp"
		android:layout_height="57dp"
		android:background="@drawable/snapshot_button_selector"
		android:clickable="true"
		android:contentDescription="@string/make_a_snapshot"
		android:focusable="true"
		android:src="@drawable/snapshot"/>

	<ImageView
		android:id="@+id/move_snapshots_bar"
		android:layout_width="45dp"
		android:layout_height="match_parent"
		android:contentDescription="@string/move_the_snapshots_bar"
		android:padding="8dp"
		android:src="@drawable/move"/>

</LinearLayout>